<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="recruit.aidiot.com.recruit.Activity.LoginActivity"
    android:background="@mipmap/registration_bg">

    <ImageView
        android:id="@+id/tv_logo"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/logo_white"/>

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/white_rounded_edit"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/tv_logo"
        android:layout_marginTop="70dp"
        android:padding="10dp"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorHint"
        android:hint="メールアドレス"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/white_rounded_edit"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/edt_email"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorHint"
        android:hint="パスワード"/>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_below="@+id/edt_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/white_rounded_button"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"/>

    <FrameLayout
        android:id="@+id/frmLine"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="60dp"
        android:layout_marginBottom="70dp"
        android:layout_above="@+id/tv_copyright">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/line_text"
            android:gravity="center"
            android:background="@drawable/green_rounded_button"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/btn_base"
            android:layout_gravity="center_vertical"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_copyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="@string/static_copyright"
        android:gravity="center"/>

</RelativeLayout>
