<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="recruit.aidiot.com.recruit.Activity.LoginActivity">

    <RelativeLayout
        android:id="@+id/rel_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/registration_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tv_logo_splash"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/logo_white"/>

        <TextView
            android:id="@+id/tv_title_splash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_logo_splash"
            android:text="仮登録が完了いたしました。"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_subtitle_splash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_title_splash"
            android:text="登録メールアドレスに送付されたURLにアクセスしアカウントの本登録を完了させてください。"
            android:textColor="@color/Background"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/tv_company_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="Miraigakyoki Laboratory Co.,ltd. All rights reserved"
            android:textColor="@color/Background"
            android:textSize="12dp"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
